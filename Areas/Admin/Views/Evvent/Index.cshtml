@using BackFinalEdu.DAL.Entities
@model List<Event>

<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Creata Event</h4>
                <a asp-controller="Evvent" asp-action="create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Speakers</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="border-radius:0px; object-fit:contain; height:100px; width:100px;" src="~/assets/img/event/@item.Image" alt="image">
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.StartDate.ToString("dddd, dd MMMM yyyy") <br /> <br /> @item.EndDate.ToString("dddd, dd MMMM yyyy")</td>
                                    <td>
                                        @foreach (var speaker in item.EventSpeakers)
                                        {
                                            @speaker.Speaker.Name
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="delete" method="post" class="form-sample" asp-route-id="@item.id">
                                            <a class="btn btn-success" asp-action="update" asp-route-id="@item.id">Update</a>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>