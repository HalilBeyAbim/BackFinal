@using BackFinalEdu.DAL.Entities
@model List<Speaker>

<row class="row col-lg-12">
    <div class="col-lg-12 col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Speakers</h4>
                <div class="table-responsive">
                    <table class="table">
                        <a asp-controller="Speaker" asp-action="Create" class="btn btn-primary text-white">Create</a>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Actions</th>
                                <th>Created</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var speaker in Model)
                            {
                                <tr>
                                    <td><img style="object-fit:contain; width:80px; height:80px" src="~/assets/img/event/@speaker.Image" /></td>
                                    <td>
                                        <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@speaker.id">
                                        <a asp-controller="Speaker" asp-action="Update" asp-route-id="@speaker.id" class="btn btn-success text-white">Update</a>
                                            <button type="submit" class="btn btn-danger mr-2" asp-action="Delete" asp-route-id="@speaker.id">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</row>